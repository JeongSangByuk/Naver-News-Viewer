<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="activity"
            type="com.example.navernews.view.MainActivity" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".view.MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/hangeulnurib"
            android:text="네이버 최신 속보"
            android:textColor="@color/mainGreen"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:id="@+id/tvPol"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/hangeulnurib"
                android:padding="10dp"
                android:text="정치"
                android:textColor="@color/mainGreen"
                android:gravity="center"
                android:textSize="13dp"
                android:onClick="@{activity::onClickPolTv}"
                />

            <TextView
                android:id="@+id/tvEco"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/hangeulnurib"
                android:padding="10dp"
                android:text="경제"
                android:gravity="center"
                android:textColor="@color/mainGreen"
                android:onClick="@{activity::onClickEcoTv}"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tvSoc"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/hangeulnurib"
                android:padding="10dp"
                android:text="사회"
                android:gravity="center"
                android:textColor="@color/mainGreen"
                android:onClick="@{activity::onClickSocTv}"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tvLif"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/hangeulnurib"
                android:padding="10dp"
                android:text="생활"
                android:gravity="center"
                android:textColor="@color/mainGreen"
                android:onClick="@{activity::onClickLifTv}"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tvIt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/hangeulnurib"
                android:padding="10dp"
                android:text="IT"
                android:gravity="center"
                android:textColor="@color/mainGreen"
                android:onClick="@{activity::onClickItTv}"
                android:textSize="13dp" />


        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <View
            android:id="@+id/vPol"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/mainGreen"
            android:layout_gravity="center"
            />

        <View
            android:id="@+id/vEco"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/mainGreen"
            android:layout_gravity="center"
            />

        <View
            android:id="@+id/vSoc"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/mainGreen"
            android:layout_gravity="center"
            />

        <View
            android:id="@+id/vLif"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/mainGreen"
            android:layout_gravity="center"
            />

        <View
            android:id="@+id/vIt"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/mainGreen"
            android:layout_gravity="center"
            />

    </LinearLayout>


        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/newsRv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    </LinearLayout>
</layout>